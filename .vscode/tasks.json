{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "args": [
                "${workspaceFolder}/${fileBasenameNoExtension}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CompileRelease",
            "type": "shell",
            "command": "${workspaceFolder}\\BuildEXE.bat",
            "args": [
                "release"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "RunRelease",
            "dependsOn": [
                "CompileRelease"
            ],
            "type": "shell",
            "command": "${workspaceFolder}\\release\\HelloHarbour.exe",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}